---
import Layout from '@/layouts/Layout.astro';
import HeroContainer from '../HeroContainer.astro';
import Button from '../Button.astro';
import Numeros from '@/components/Numeros.astro'
import Galeria from '../Galeria.astro';

import { getI18N } from '@/i18n';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title="Archivo" description="Archivo">
  <HeroContainer img="/archivo-background.webp">
    <h1 class="text-6xl uppercase mb-20 font-tomaso tracking-widest">
      Ediciones anteriores
    </h1>
    <Button
      class="animate-fade-up"
      url="https://www.youtube.com/watch?=1YmpPrqKP-g"
    >
      REVIVE LA ULTIMA GALA
    </Button>
  </HeroContainer>
  <main>
    <Galeria />
    <Numeros />
  </main>
</Layout>
